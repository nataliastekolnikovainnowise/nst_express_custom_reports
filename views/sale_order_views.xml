<odoo>
    <record id="view_order_form_express" model="ir.ui.view">
        <field name="name">sale.order.form.express.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Добавляем колонку Express Picking (только отображение) -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <field name="express_picking_name" readonly="1"/>
            </xpath>

            <!-- В форме строки заказа показываем только Express Picking -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="express_picking_name" readonly="1"/>
            </xpath>

        </field>
    </record>
</odoo>
