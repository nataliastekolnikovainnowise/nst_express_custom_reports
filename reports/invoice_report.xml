<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" name="Invoice for Payment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h3>Счёт на оплату № <span t-field="o.name"/> от <span t-field="o.date_order" t-options='{"format": "dd.MM.yyyy"}'/></h3>
                        </div>

                        <table class="table table-sm table-borderless mt-3">
                            <tr>
                                <td><strong>Поставщик:</strong></td>
                                <td><span t-field="o.company_id.name"/></td>
                            </tr>
                        </table>

                        <table class="table table-sm table-borderless">
                            <tr>
                                <td><strong>Покупатель:</strong></td>
                                <td><span t-field="o.partner_id.name"/></td>
                            </tr>
                        </table>

                        <table class="table table-sm table-bordered mt-4">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Товары (работы, услуги)</th>
                                    <th>Кол-во</th>
                                    <th>Ед.изм.</th>
                                    <th class="text-end">Цена, руб</th>
                                    <th class="text-end">НДС</th>
                                    <th class="text-end">Сумма, руб</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="line_num" t-value="0"/>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <t t-set="line_num" t-value="line_num + 1"/>
                                    <td><span t-esc="line_num"/></td>
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td><span t-field="line.product_uom_qty"/></td>
                                    <td><span t-field="line.product_uom.name"/></td>
                                    <td class="text-end"><span t-field="line.price_unit"/></td>
                                    <td class="text-end">
                                        <span t-if="line.tax_id">
                                            <t t-foreach="line.tax_id" t-as="tax">
                                                <span t-esc="tax.name"/>
                                            </t>
                                        </span>
                                    </td>
                                    <td class="text-end"><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6" class="text-end"><strong>Итого:</strong></td>
                                    <td class="text-end"><strong><span t-field="o.amount_untaxed"/></strong></td>
                                </tr>
                                <tr>
                                    <td colspan="6" class="text-end"><strong>Всего к оплате:</strong></td>
                                    <td class="text-end"><strong><span t-field="o.amount_total"/></strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_invoice_payment" model="ir.actions.report">
        <field name="name">Invoice for Payment</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nst_express_custom_reports.report_invoice_document</field>
        <field name="report_file">nst_express_custom_reports.report_invoice_document</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Invoice_%s' % (object.name)</field>
    </record>
</odoo>
